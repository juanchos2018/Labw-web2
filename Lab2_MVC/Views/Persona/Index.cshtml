@model IEnumerable<Lab2_MVC.Models.ClsPersona>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <center>
            <h1>Lista de personas</h1>
            <br /><br />
            <table border="1" bordecolor="#0000FF">

                <tr>
                    <th>Apellido</th>
                    <th>Nombres</th>
                    <th>Edad</th>
                    <th>Eamil</th>
                    <th>Sexo</th>
                    <th>Talla</th>

                </tr>

                @foreach (var item in Model)
                {

                
            <tr>

                <td>@Html.DisplayFor(modelItem => item.apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.edad)</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>@Html.DisplayFor(modelItem => item.sexo)</td>
                <td>@Html.DisplayFor(modelItem => item.talla)</td>

            </tr>
                }

            </table>

                  <br /><br />
        </center>
    </div>
</body>
</html>
